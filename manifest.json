{
    "name": "Lighthouse",
    "description": "Pierce through the fog of distraction",
    "version": "0.1.0",
    "manifest_version": 2,
    "icons": {
		"16": "./assets/img/logo16.png",
		"24": "./assets/img/logo24.png",
		"32": "./assets/img/logo32.png",
		"36": "./assets/img/logo36.png",
		"48": "./assets/img/logo48.png",
		"64": "./assets/img/logo64.png",
		"128": "./assets/img/logo128.png"
	},
    "background": {
        "service_worker": "background.js"
    },
    "browser_action":{
        "default_popup":"popup.html",
        "default_title": "Lighthouse"
    },
    "permissions": [
        "storage",
        "tabs",
        "webRequest",
        "webRequestBlocking",
        "<all_urls>",
        "activeTab"
    ],
    "web_accessible_resources": [
        "redirect.html"
    ]
}
