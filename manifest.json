{
    "name": "Lighthouse",
    "description": "Exit the fog of distraction",
    "version": "0.1.0",
    "manifest_version": 2,
    "icons": {},
    "background": {
        "service_worker": "background.js"
    },
    "browser_action":{
        "default_popup":"popup.html",
        "default_title": "Lighthouse"
    },
    "permissions": [
        "storage",
        "tabs",
        "webRequest",
        "webRequestBlocking",
        "<all_urls>",
        "activeTab"
    ],
    "web_accessible_resources": [
        "redirect.html"
    ]
}
